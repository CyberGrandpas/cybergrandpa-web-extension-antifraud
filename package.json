{
  "name": "cybergrandpa-cross-browser-extension-antifraud",
  "description": "A browser web extension for safety and anti-fraud online activities.",
  "version": "0.0.3",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "postinstall": "wxt prepare",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write ./src",
    "lint": "prettier --check ./src && eslint ./src"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.6",
    "@thedutchcoder/postcss-rem-to-px": "^0.0.2",
    "@tsconfig/svelte": "^5.0.4",
    "@types/chrome": "^0.0.304",
    "@types/lokijs": "^1.5.14",
    "@typescript-eslint/parser": "^8.24.0",
    "@webext-core/proxy-service": "^1.2.1",
    "@wxt-dev/i18n": "^0.2.3",
    "@wxt-dev/module-svelte": "^2.0.3",
    "autoprefixer": "^10.4.20",
    "change-case": "^5.4.4",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-svelte": "^2.46.1",
    "globals": "^15.15.0",
    "lint-staged": "^15.4.3",
    "lokijs": "^1.5.12",
    "nanoid": "^5.1.0",
    "prettier": "^3.5.1",
    "prettier-plugin-svelte": "^3.3.3",
    "sass-embedded": "^1.85.0",
    "simple-git-hooks": "^2.11.1",
    "svelte": "^5.20.1",
    "svelte-check": "^4.1.4",
    "svelte-loading-spinners": "^0.3.6",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0",
    "webext-base-css": "^2.1.0",
    "wxt": "^0.19.27"
  },
  "packageManager": "bun@1.1.0"
}
